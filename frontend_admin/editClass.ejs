            value="<%= data.content1Input2 || '' %>">
        </div>
      </div>

      <!-- Content 2 -->
      <div class="form-group">
        <label for="content2Input1">Content 2 :</label>
        <div class="input-group">
          Heading :<input type="text" id="content2Input1" name="content2Input1"
            value="<%= data.content2Input1 || '' %>">
          SubHeading :<input type="text" id="content2Input2" name="content2Input2"
            value="<%= data.content2Input2 || '' %>">
        </div>
      </div>

      <!-- Content 3 -->
      <div class="form-group">
        <label for="content3Input1">Content 3 :</label>
        <div class="input-group">
          Heading : <input type="text" id="content3Input1" name="content3Input1"
            value="<%= data.content3Input1 || '' %>">
          SubHeading :<input type="text" id="content3Input2" name="content3Input2"
            value="<%= data.content3Input2 || '' %>">
        </div>
      </div>



      <div class="form-group">
        <label for="image">bgImage:</label>
        <input type="file" id="image" name="image" value="<%= data.image || '' %>">
        <% if (data.image) { %>
          <img src="/<%= data.image %>" alt="Current Cover" style="max-width: 200px;">
          <% } %>
      </div>






      <div class="form-group">
        <label for="bgImage">bgImage:</label>
        <input type="file" id="bgImage" name="bgImage" value="<%= data.bgImage || '' %>">
        <% if (data.bgImage) { %>
          <img src="/<%= data.bgImage %>" alt="Current Cover" style="max-width: 200px;">
          <% } %>
      </div>





      <div class="form-group">
        <label for="buttonText">Button Text:</label>
        <input type="text" id="buttonText" name="buttonText" value="<%= data.buttonText || '' %>">
      </div>

